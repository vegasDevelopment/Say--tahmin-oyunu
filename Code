      const sonuc = document.getElementById('sonuc');
      deneme++;

      if (isNaN(tahmin)) {
        sonuc.textContent = "LÃ¼tfen geÃ§erli bir sayÄ± gir.";
} else if (tahmin < hedefSayi) {
        sonuc.textContent = "Daha bÃ¼yÃ¼k bir sayÄ± dene ğŸ”¼";
